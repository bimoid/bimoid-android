<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Bimoid" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>

    <!-- Splash Screen theme. -->
    <style name="Theme.Bimoid.SplashScreen" parent="Theme.Bimoid.SplashScreen">
        <item name="android:windowSplashScreenBackground">@drawable/splash_background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_bimoid</item>
        <item name="android:splashScreenTheme">@style/Theme.Bimoid</item>
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
    </style>
</resources>